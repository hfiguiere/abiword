// the main dialog
#define AP_RID_DIALOG_PAGENUMBERS_COMBO_POSITION		1000
#define AP_RID_DIALOG_PAGENUMBERS_COMBO_ALIGN			1001
#define AP_RID_DIALOG_PAGENUMBERS_STATIC_POSITION		1002
#define AP_RID_DIALOG_PAGENUMBERS_STATIC_PREVIEW		1004
#define AP_RID_DIALOG_PAGENUMBERS_STATIC_ALIGNMENT		1005
#define AP_RID_DIALOG_PAGENUMBERS_STATIC_PREVIEW_WIDGET	1006
#define AP_RID_DIALOG_PAGENUMBERS_BTN_OK				IDOK
#define AP_RID_DIALOG_PAGENUMBERS_BTN_CANCEL			IDCANCEL

#ifdef RC_INVOKED

AP_RID_DIALOG_PAGENUMBERS DIALOGEX 0, 0, 252, 159
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Page Numbers"
FONT 8, "MS Sans Serif"
BEGIN
    LTEXT           "Position:",AP_RID_DIALOG_PAGENUMBERS_STATIC_POSITION,7,18,117,8
    COMBOBOX        AP_RID_DIALOG_PAGENUMBERS_COMBO_POSITION,7,31,120,60,
                    CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
    LTEXT           "Alignment:",AP_RID_DIALOG_PAGENUMBERS_STATIC_ALIGNMENT,7,50,117,8
    COMBOBOX        AP_RID_DIALOG_PAGENUMBERS_COMBO_ALIGN,7,62,120,60,
                    CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
    LTEXT           "Preview:",AP_RID_DIALOG_PAGENUMBERS_STATIC_PREVIEW,162,20,75,8
    CONTROL         "",AP_RID_DIALOG_PAGENUMBERS_STATIC_PREVIEW_WIDGET,"Static",SS_BLACKFRAME,161,34,77,
                    83,WS_EX_CLIENTEDGE
    DEFPUSHBUTTON   "OK",IDOK,55,138,50,14
    PUSHBUTTON      "Cancel",IDCANCEL,134,138,50,14
END

#endif /* RC_INVOKED */
